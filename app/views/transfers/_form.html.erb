<%= form_for @transfer, :html => { :class => "form-horizontal transfer" } do |f| %>

  <% if @transfer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@transfer.errors.count, "error") %> prohibited this transfer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @transfer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= label_tag "Sender name",nil, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= text_field_tag "name", current_user.name, disabled: true %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag "Receiver name",nil, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= select_tag "user_id", options_from_collection_for_select(receiver_names,"id" ,"name") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%=f.error_span(:value) %>
  </div>
  <div class="form-group">
    <%= label_tag "Currency",nil, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= select_tag "currency", options_for_select(['USD','EURO','GBP']), :class => 'form-control' %>
    </div>
    <%=f.error_span(:currency_type) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Transfer", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                transfers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
